<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edthembanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/thembanan"
        android:background="@drawable/editext_backgroud"
        android:textColorHint="@color/colorXam"
        android:layout_gravity="center"
        android:padding="@dimen/padding"
        android:layout_margin="@dimen/distance_margin_top"
        android:textColor="@color/colorDen"

        />
    <Button
        android:id="@+id/btndongythembanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_gravity="center"
        android:text="@string/chon"
        />

</LinearLayout>