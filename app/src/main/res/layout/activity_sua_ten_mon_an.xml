<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDen"
    >

    <EditText
        android:id="@+id/edsuatenmonan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên món ăn"
        android:background="@drawable/editext_backgroud"
        android:textColorHint="@color/colorXam"
        android:layout_gravity="center"
        android:padding="@dimen/padding"
        android:textColor="@color/colorDen"
        android:layout_marginTop="@dimen/margin_size_5"

        />

    <EditText
        android:id="@+id/edsuagiamonan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá món ăn"
        android:background="@drawable/editext_backgroud"
        android:textColorHint="@color/colorXam"
        android:layout_gravity="center"
        android:padding="@dimen/padding"
        android:textColor="@color/colorDen"
        android:layout_marginTop="@dimen/margin_size_5"
        android:inputType="number"

        />
    <Button
        android:id="@+id/btndongysuamonan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:layout_gravity="center"
        android:text="@string/sua"
        android:layout_marginTop="@dimen/margin_size_5"

        />

</LinearLayout>