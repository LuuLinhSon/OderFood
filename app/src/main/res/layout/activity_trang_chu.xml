<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trang_chu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.luulinhson.oderfood.Activity.TrangChuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_trangchu"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorXanhDuong"
            android:elevation="4dp"
            >
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>


        <android.support.design.widget.NavigationView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/navigationview_trangchu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:menu="@menu/menu_navigation"
            android:background="@color/colorXanhDuong"
            android:layout_gravity="start"
            >
        </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
